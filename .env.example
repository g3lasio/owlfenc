# Environment Configuration Template
# Copy this file to .env and replace with your actual values
# NEVER commit .env file to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=5000
ENABLE_REAL_EMAIL=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_64_character_session_secret_here

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database_name
PGDATABASE=your_database_name
PGHOST=your_database_host
PGPORT=5432
PGUSER=your_database_user  
PGPASSWORD=your_database_password

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_API_KEY=your_firebase_web_api_key
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin SDK (for server-side operations)
FIREBASE_ADMIN_CREDENTIALS={"type":"service_account","project_id":"..."}

# =============================================================================
# AI/ML SERVICES
# =============================================================================
# OpenAI API (for GPT models)
OPENAI_API_KEY=sk-...your_openai_api_key

# Anthropic API (for Claude models) 
ANTHROPIC_API_KEY=sk-ant-api03-...your_anthropic_key
VITE_ANTHROPIC_API_KEY=sk-ant-api03-...your_anthropic_key_for_client

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe (Production)
STRIPE_API_KEY=sk_live_...your_stripe_live_key

# Stripe (Test/Development) 
STRIPE_API_TEST_KEY=sk_test_...your_stripe_test_key
SLACK_LIVE_API_KEY=sk_live_...your_slack_live_key

# =============================================================================
# MAPPING & LOCATION SERVICES
# =============================================================================
# Google Maps API
GOOGLE_API_KEY=AIza...your_google_api_key
VITE_GOOGLE_MAPS_API_KEY=AIza...your_google_maps_api_key

# Mapbox API  
MAPBOX_PUBLIC_KEY=pk.eyJ1...your_mapbox_public_key
VITE_MAPBOX_ACCESS_TOKEN=pk.eyJ1...your_mapbox_access_token

# =============================================================================
# PROPERTY DATA SERVICES
# =============================================================================
# ATTOM Data API (Property information)
ATTOM_API_KEY=your_attom_api_key

# CoreLogic API
CORELOGIC_CONSUMER_KEY=your_corelogic_consumer_key

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# Twilio (SMS/Phone services)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Email Service (if not using Firebase)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
RESEND_API_KEY=re_your_resend_api_key

# =============================================================================
# CLIENT-SIDE ENVIRONMENT VARIABLES
# =============================================================================
# Note: Variables prefixed with VITE_ are available on the frontend
# Be careful not to expose sensitive data in client-side variables